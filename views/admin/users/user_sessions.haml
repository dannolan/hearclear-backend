.row-fluid
	.span12
		.box
			- if @user.checkins.nil? || @user.checkins.count == 0
				%p No Checkins
			- else
				%h4.box-header.round-top 
					User Sessions
				.box-container-toggle
					.box-content
						%table.table.table-striped.table-bordered
							%thead
								%tr
									%th Session ID
									%th Date
									%th Venue
									%th Samples
							%tbody
								- @user.checkins.each do |checkin|
									%tr
										%td
											= checkin.id
										%td
											= checkin.sessions.max(:timestamp)
										%td
											= checkin.venue.name
										%td
											= checkin.sessions.count